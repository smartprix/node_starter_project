{
  "name": "node-starter-project",
  "version": "0.2.0",
  "description": "Starter Project For Node",
  "main": "dist/index.js",
  "repository": {
    "private": true
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon src/index.js --ignore dist/ --exec babel-node",
    "test": "npm run lint && npm run test-only",
    "check-coverage": "true",
    "build": "babel src --out-dir dist",
    "lint": "eslint src",
    "test-only": "mocha --compilers js:babel-register test/*.test.js"
  },
  "author": "Hitesh Khandelwal <hitesh@smartprix.com> (http://www.smartprix.com/)",
  "license": "ISC",
  "dependencies": {
    "lodash": "4.15.0",
    "sm-utils": "git://github.com/smartprix/sm-utils.git"
  },
  "devDependencies": {
    "babel-cli": "6.11.4",
    "babel-eslint": "6.1.2",
    "babel-plugin-transform-es2015-modules-commonjs": "6.11.5",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.11.6",
    "chai": "3.5.0",
    "eslint": "3.3.0",
    "eslint-config-smartprix": "1.1.2",
    "eslint-plugin-babel": "3.3.0",
    "eslint-plugin-import": "1.13.0",
    "ghooks": "1.3.2",
    "mocha": "3.0.2"
  },
  "eslintConfig": {
    "extends": "smartprix",
    "rules": {}
  },
  "babel": {
    "presets": [
      "stage-0"
    ],
    "plugins": [
      "transform-es2015-modules-commonjs"
    ],
    "sourceMaps": true
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run build && npm test && npm run check-coverage"
    }
  }
}
